extends layout

block content
  link(rel='stylesheet', href='/components/bootstrap/dist/css/bootstrap.min.css')
  link(rel='stylesheet', href='/components/bootstrap/dist/css/bootstrap-theme.min.css')
  .container
    h1= title
    a(href="createTimetable") Create a timetable
    div
      a(href="upload") Upload timetable data


    h1 Timetables
    table.table
      thead
        th Active Timetables
      tbody
        if data
          each d in data
            tr
              td
                a(href="tables/"+d.ID)= d.name
              td
                a(class="delete",href="tables/"+d.ID+"/del") Delete





  
  script(src='/js/jq.js')
  script(src='/js/vendors.js')
  script(type='text/javascript').
    var tData = JSON.parse('!{dataJson}');
    tData = _.uniq(tData);
  
  